<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mx-auto">Burgers!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2>Burgers Ready To Be Devoured</h2>
            <ul>
                {{#each burgers}}
                    {{#unless eaten}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2>Burgers Already Devoured</h2>
            <ul>
                {{#each burgers}}
                    {{#if eaten}}
                        {{> burgers/burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form id="create-burger">
                <div class="form-group">
                    <label for="burgerName">Burger Name:</label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button class="btn btn-secondary" id="submit_burger" type="submit">Submit Burger</button>
            </form>
        </div>
    </div>
</div>
